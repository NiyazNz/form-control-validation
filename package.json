{
  "name": "form-control-validation-app",
  "version": "1.0.0",
  "private": true,
  "description": "A simple directive to display angular form validation errors",
  "license": "MIT",
  "author": "Niyaz Batyrshin <Niyaz.Batyrshin@gmail.com>",
  "repository": {
    "type": "git",
    "url": "https://gitlab.com/Enzedd/form-control-validation.git"
  },
  "bugs": {
    "url": "https://gitlab.com/Enzedd/form-control-validation/issues"
  },
  "homepage": "https://gitlab.com/Enzedd/form-control-validation",
  "keywords": [
    "angular",
    "ngx",
    "form",
    "formControl",
    "input",
    "errors",
    "validation",
    "messages",
    "reactive forms",
    "form validation",
    "form errors",
    "input validation",
    "input errors",
    "javascript",
    "typescript"
  ],
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "build:pages": "ng build --base-href /form-control-validation/ --deploy-url /form-control-validation/ --configuration production",
    "test": "ng test",
    "lint": "ng lint",
    "e2e": "ng e2e",
    "lib:build": "ng build form-control-validation",
    "lib:build:prod": "npm run lib:build && npm run lib:copy-files",
    "lib:watch": "npm run lib:build -- --watch",
    "lib:test": "ng test form-control-validation",
    "lib:test:ci": "npm run lib:test -- --no-watch --no-progress --browsers=ChromeHeadlessCI --code-coverage",
    "lib:copy-lic": "cp LICENSE dist/form-control-validation/LICENSE",
    "lib:copy-readme": "cp README.md dist/form-control-validation/README.md",
    "lib:copy-files": "npm run lib:copy-lic && npm run lib:copy-readme",
    "publish": "cd dist/form-control-validation && npm publish --access=public"
  },
  "dependencies": {
    "@angular/animations": "~12.1.1",
    "@angular/common": "~12.1.1",
    "@angular/compiler": "~12.1.1",
    "@angular/core": "~12.1.1",
    "@angular/forms": "~12.1.1",
    "@angular/platform-browser": "~12.1.1",
    "@angular/platform-browser-dynamic": "~12.1.1",
    "@angular/router": "~12.1.1",
    "prismjs": "^1.27.0",
    "rxjs": "~6.6.7",
    "tslib": "^2.0.0",
    "zone.js": "~0.11.4"
  },
  "devDependencies": {
    "@angular-devkit/core": "^12.1.1",
    "@angular-devkit/build-angular": "~12.1.1",
    "@angular/cli": "~12.1.1",
    "@angular/compiler-cli": "~12.1.1",
    "@angular/language-service": "~12.1.1",
    "@types/jasmine": "~3.6.0",
    "@types/jasminewd2": "~2.0.3",
    "@types/node": "^12.11.1",
    "codelyzer": "^6.0.0",
    "jasmine-core": "~3.6.0",
    "jasmine-spec-reporter": "~5.0.0",
    "karma": "~6.3.4",
    "karma-chrome-launcher": "~3.1.0",
    "karma-coverage-istanbul-reporter": "~3.0.2",
    "karma-jasmine": "~4.0.0",
    "karma-jasmine-html-reporter": "^1.5.0",
    "ng-packagr": "^12.1.0",
    "protractor": "~7.0.0",
    "ts-node": "~7.0.0",
    "tslint": "~6.1.0",
    "typescript": "~4.3.5"
  }
}
